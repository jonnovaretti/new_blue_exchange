<!-- The complete layout is found here: https://tailwindui.com/components/marketing/elements/headers -->
<div class="relative bg-white mb-5 drop-shadow-md">
    <div class="mx-auto max-w-7xl px-4 sm:px-6">
      <div class="flex items-center justify-between py-6 md:justify-start md:space-x-10">
        <div class="flex justify-start lg:w-0 lg:flex-1">
          <a href="#">
            <span class="sr-only">New Blue Exchange</span>
            <%= image_tag "logo.png", height: 50, width: 50,  class:"h-8 w-auto sm:h-10" %>
          </a>
        </div>
        <nav class="space-x-10 md:flex">
          <a href="/" class="text-base font-medium text-gray-500 hover:text-gray-900">Offers</a>
          <a href="/how-it-works" class="text-base font-medium text-gray-500 hover:text-gray-900">How it works?</a>
          <a href="/faq" class="text-base font-medium text-gray-500 hover:text-gray-900">Faq</a>
          <a href="/contact" class="text-base font-medium text-gray-500 hover:text-gray-900">Contact</a>
        </nav>
        <div class="items-center justify-end md:flex md:flex-1 lg:w-0">
          <% if user_signed_in? %>
            <%= link_to "Dashboard", user_dashboard_index_path, class: "text-base font-medium text-gray-500 hover:text-gray-900" %>
          <% else %>
            <%= link_to "Sign in", new_user_session_path, class: "ml-8 inline-flex items-center justify-center whitespace-nowrap rounded-md border border-transparent bg-blue-800 px-4 py-2 text-base font-medium text-white shadow-sm hover:bg-indigo-700" %><br />
          <% end %>
        </div>
      </div>
    </div>
  </div>
  