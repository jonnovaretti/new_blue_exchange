<%= turbo_frame_tag "#{dom_id(offer)}_line" do %>
  <div class="grid grid-cols-6">
    <div scope="row" class="col-span-1 py-2 px-3 font-medium text-gray-900 whitespace-nowrap white:text-white">
      <div class="flex-shrink-0 w-10 mr-3">
        <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded white:bg-blue-200 white:text-blue-800">
          <%= offer.state.capitalize %>
        </span>
      </div>
    </div>
    <div class="col-span-1 py-2 px-3">U$ <%= offer.amount %></div>
    <div class="col-span-1 py-2 px-3">R$ <%= offer.unit_price %></div>
    <div class="col-span-1 py-2 px-3">R$ <%= offer.total_price %></div>
    <div class="col-span-2 text-right">
      <ul>
        <li class="float-right">
            <%= button_to "Publish", user_offer_path(offer, offer: { state: 'published'}), method: :patch, 
            class: "mr-2 border border-gray-300 bg-gray-100 text-blue-800 text-xs font-semibold px-2 py-0.5 rounded white:bg-blue-200 white:text-blue-800" %>
        </li>
          <li class="float-right">
            <%= button_to "Close", user_offer_path(offer, offer: { state: 'closed'}), method: :patch, 
            class: "mr-2 border border-gray-300 bg-gray-100 text-blue-800 text-xs font-semibold px-2 py-0.5 rounded white:bg-blue-200 white:text-blue-800" %>
          </li>
          <li>
            <a
            href="#"
            class="font-medium text-blue-600 white:text-blue-500 hover:underline">
            <span
              class="mr-2 border border-gray-300 bg-gray-100 text-blue-800 text-xs font-semibold px-2 py-0.5 rounded white:bg-blue-200 white:text-blue-800">
              Edit
            </span>
          </a>
        </li>
        </tr>
      </ul>
    </div>
  </div>
<% end %>
