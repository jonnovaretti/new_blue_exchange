<div id="<%= dom_id wallet %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Available amount:</strong>
    <%= wallet.available_amount %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Hold amount:</strong>
    <%= wallet.hold_amount %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Currency:</strong>
    <%= wallet.currency %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= wallet.user_id %>
  </p>
</div>
